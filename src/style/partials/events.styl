.events
    &--index
        display flex
        flex-wrap wrap
        margin 0 0 125px 0
        overflow hidden
        @media tablet-portrait-small
            padding 80px 0 0 0

    &__photos
        position relative
        width 100%
        height 600px
        margin 40px 0
        overflow hidden
        @media tablet-portrait-small
            display none

        &-stripe
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            background-repeat repeat-x
            animation photo-stripe-flow
            animation-iteration-count infinite
            animation-direction normal

            &--01
                background-image url("../images/images-stripe-layer-01.png")
                animation-duration 300s

            &--02
                background-image url("../images/images-stripe-layer-02.png")
                animation-duration 260s

            &--03
                background-image url("../images/images-stripe-layer-03.png")
                animation-duration 220s

    &__info
        display inline-block
        width calc((100% - 140px) * 0.6 - 19px)
        margin 0 38px 0 0 
        padding 37px 0 0 0
        vertical-align top
        @media desktop-medium
            width calc((100% - 80px) * 0.6 - 19px)
        @media tablet-landscape-medium
            width calc((100% - 40px) * 0.6 - 19px)
        @media tablet-portrait-large
            display block
            width 100%
            max-width 600px
            margin 0 auto
            text-align center
        @media tablet-portrait-small
            padding 0

    &__heading
        display block
        max-width 680px
        @media laptop
            max-width 500px
        @media tablet-portrait-large
            max-width none

    &__description
        max-width 580px
        margin 28px 0 0 0
        @media laptop
            max-width 500px
        @media tablet-portrait-large
            max-width none

    &__link
        margin 52px 0 0 0

    &__slider-wrapper
        display inline-block
        width calc((100% - 140px) * 0.4 - 19px + 140px)
        vertical-align top
        overflow hidden
        @media desktop-medium
            width calc((100% - 80px) * 0.4 - 19px + 80px)
        @media tablet-landscape-medium
            width calc((100% - 40px) * 0.4 - 19px + 40px)
        @media tablet-portrait-large
            display block
            width 344px
            margin 50px auto 0 auto
            overflow visible
        @media phone
            width 290px

    &__slider
        width 100%

.events-slider
    width 100%
    max-width 414px
    margin 0
    overflow visible
    @media laptop
        max-width 344px
    @media phone
        max-width 290px

    &__list
        display flex
        flex-wrap nowrap
        height auto
        margin 0
        padding 0
        list-style none

    &__item
        flex-shrink 0
        width 100%

    &__arrows
        display flex
        justify-content space-between
        width 260px  
        margin 41px 0 0 0
        @media tablet-portrait-large
            margin 41px auto 0 auto
