.prices
    &__list
        margin 0
        padding 0
        list-style none

    &__item
        position relative
        z-index 1
        display flex
        flex-wrap nowrap
        justify-content space-between
        align-items flex-end
        width 100%
        font-family "HelveticaNeue"
        font-size 16px
        line-height 26px
        font-weight 300
        color black
        @media phone
            flex-direction column
            align-items flex-start

        &::before
            content ""
            position absolute
            bottom 8px
            left 0
            z-index -1
            display block
            width 100%
            height 0
            border-bottom 1px dotted light-gray
            @media phone
                display none

        &:not(:last-child)
            margin 0 0 19px 0

    &__hint
        position relative
        display inline-block
        width calc(100% - 200px)
        @media phone
            width 100%