.gallery
    width 100%

    &--index
        margin 0 0 112px 0

    &__heading
        display block
        width 100%
        max-width 700px
        margin 0 auto 39px auto
        text-align center
        @media tablet-portrait-small
            max-width 500px

    &__list
        display flex
        flex-wrap wrap
        margin 0
        padding 0
        list-style none

    &__item
        width 25%
        @media laptop
            width calc(100% / 3)
        @media tablet-portrait-small
            width calc(100% / 2)

    &__image-wrapper
        position relative
        width 100%
        padding 100% 0 0 0
        overflow hidden

    &__image
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        display block
        width 101%
        height 101%
        object-fit cover

