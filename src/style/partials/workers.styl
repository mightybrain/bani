.workers
    &--paddings
        padding 0 0 114px 0

    &__list
        margin 0
        padding 0
        list-style none

    &__item
        &:not(:last-child)
            margin 0 0 90px 0

.worker
    position relative
    
    &__cols
        display flex
        flex-wrap nowrap
        justify-content space-between
        width calc(100% + 62px)
        margin 0 0 0 -62px
        @media tablet-landscape-large
            width calc(100% + 48px)
            margin 0 0 0 -48px
        @media tablet-portrait-large
            flex-direction column
            width 100%
            margin 0 0 -24px 0

    &__col
        position relative
        width calc(100% / 3 - 62px)
        margin 0 0 0 62px
        @media tablet-landscape-large
            width calc(100% / 3 - 48px)
            margin 0 0 0 48px
        @media tablet-portrait-large
            width 100%
            margin 0 0 24px 0

    &__name
        display block
        margin 0 0 10px 0
        font-family "ArnoPro"
        font-size 46px
        line-height 50px
        font-weight 300
        color black
        @media laptop
            font-size 36px
            line-height 40px

    &__position
        font-family "ArnoPro"
        font-size 21px
        line-height 27px
        font-weight 300
        color gray
        @media laptop
            font-size 18px
            line-height 24px

    &__description:not(:first-child)
        margin 29px 0 0 0

    &__image-container
        padding 142% 0 0 0
        @media tablet-portrait-large
            padding 0
            max-width 398px

    &__image-wrapper
        position absolute
        top 0
        left 50%
        transform translateX(-50%)
        width 100%
        padding 142% 0 0 0
        overflow hidden
        @media tablet-portrait-large
            position relative
            left 0
            transform none

    &__image
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        display block
        width 100%
        height 100%
        object-fit cover

.worker__image-container.js-stick-to-screen
    position fixed
    top 0
    left 50%
    transform translate(-50%)
    margin 0 0 0 75px

.worker__image-container.js-stick-to-bottom
    position absolute
    bottom 0
    left 0