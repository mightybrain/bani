.contacts
    &--index
        padding 100px 0
        background-color black

    &--paddings
        0 0 114px 0

    &__info
        display flex
        flex-direction column
        align-items center
        text-align center

    &__heading
        display block
        max-width 680px
        margin 0 0 28px 0
        @media laptop
            max-width 500px

    &__description
        max-width 540px
        @media laptop
            max-width 500px

    &__phone
        display inline-block
        margin 56px 0 14px 0
        font-family "ArnoPro"
        font-size 42px
        line-height 46px
        font-weight 300
        color black
        text-decoration none
        outline none
        @media laptop
            font-size 36px
            line-height 40px
        @media phone
            font-size 30px
            line-height 34px

    &__map
        width 100%
        height 480px
        margin 80px 0 0 0
        @media tablet-portrait-large
            height 400px
        @media tablet-portrait-small
            height 300px

.contacts--index
    & .contacts
        &__info
            display inline-block
            width calc(60% - 19px)
            margin 0 38px 0 0
            padding 93px 0 0 0
            vertical-align top
            text-align left
            @media tablet-portrait-large
                display block
                width 100%
                max-width 600px
                margin 0 auto 50px auto
                padding 0
                text-align center

        &__heading
            @media tablet-portrait-large
                max-width none

        &__description
            @media tablet-portrait-large
                max-width none

        &__phone
            color white

        &__map
            display inline-block
            width calc(40% - 19px)
            height 780px
            margin 0
            @media laptop
                height 548px
            @media tablet-portrait-large
                display block
                width 100%
                height 400px
            @media tablet-portrait-small
                height 300px