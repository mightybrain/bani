.images-slider
    width 100%
    max-width 640px
    margin 0
    overflow visible
    @media laptop
        max-width 522px

    &__list
        display flex
        flex-wrap nowrap
        height auto
        margin 0
        padding 0
        list-style none

    &__item
        flex-shrink 0
        position relative
        width 100%
        height 440px
        overflow hidden
        @media laptop
            height 358px

    &__image
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        display block
        width 100%
        height 100%
        object-fit cover

    &__arrows
        display flex
        justify-content space-between
        width 260px  
        margin 46px 0 0 0 