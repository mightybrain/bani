.services
    width 100%

    &--paddings
        padding 0 0 114px 0

    &__groups
        display flex
        width 100%
        text-align center
        @media tablet-portrait-large
            flex-direction column

    &__group
        flex-shrink 1
        position relative
        display flex
        width 50%
        min-height 100vh
        overflow hidden
        transition width .5s 0s ease
        @media tablet-landscape-large
            min-height 700px
        @media tablet-portrait-large
            width 100%
        @media tablet-portrait-small
            min-height 500px

        &:hover
            width 55%
            @media tablet-portrait-large
                width 100%

        &-image-wrapper
            position absolute
            top 0
            left 0
            width 60vw
            height 100%
            background-color black
            overflow hidden
            @media tablet-portrait-large
                top 50%
                left 50%
                transform translate(-50%, -50%)
                width 100%
                object-fit cover

        &-image
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
            width 100%
            height 100%
            object-fit cover
            opacity .65

        &-info
            position relative
            display flex
            flex-direction column
            align-items center
            width calc(100vw / 2 - 195px)
            margin 0 auto
            padding 45% 0 60px 0
            @media laptop
                width calc(100vw / 2 - 160px)
                padding 35% 0 60px 0
            @media tablet-portrait-large
                width calc(100% - 60px)
                max-width 600px

        &-heading
            width 100%
            max-width 600px
            margin 0 0 33px 0

        &-description
            margin 0 0 50px 0

        &-links
            display flex
            flex-wrap wrap
            justify-content center
            margin auto 0 -20px 0
            opacity 0
            visibility hidden
            transition opacity .5s 0s ease, visibility 0s .5s linear
            @media tablet-landscape-large
                opacity 1
                visibility visible

        &-link
            position relative
            margin 0 19px 20px 19px
            font-family "ArnoPro"
            font-size 24px
            line-height 28px
            font-weight 300
            color white
            text-decoration none
            @media laptop
                font-size 21px
                line-height 25px

            &::before
                content ""
                position absolute
                top -17px
                left 0
                display block
                width 0
                height 1px
                background-color white
                opacity .25
                transition width .3s 0s ease

            &:hover::before
                width 100%

    &__list
        display flex
        flex-wrap wrap
        width calc(100% + 38px)
        margin 0 0 -38px -38px
        padding 0
        list-style none
        @media laptop
            width calc(100% + 20px)
            margin 0 0 -20px -20px
        @media tablet-portrait-small
            justify-content center
            width 100%
            margin 0 0 -20px 0
        @media phone
            margin 0 0 -15px 0

    &__item
        width calc(50% - 38px)
        margin 0 0 38px 38px
        @media laptop
            width calc(50% - 20px)
            margin 0 0 20px 20px
        @media tablet-portrait-small
            width 100%
            max-width 522px
            margin 0 0 20px 0
        @media phone
            margin 0 0 15px 0

.services__group:nth-child(even)
    & .services__group-image-wrapper
        left auto 
        right 0
        @media tablet-portrait-large
            left 50%
            right auto

.services__group:hover
    & .services__group-links
        opacity 1
        visibility visible
        transition opacity .5s 0s ease, visibility 0s 0s linear

.service-preview
    position relative
    width 100%
    height 580px
    background-color black
    overflow hidden
    @media laptop
        height 480px

    &__link
        text-decoration none
        outline none

    &__info
        position relative
        display flex
        flex-direction column
        align-items center
        justify-content center
        height 100%
        padding 50px 40px
        text-align center
        background-color lightest-gray
        border 1px solid light-gray
        @media phone
            padding 18px 20px

    &__heading
        position relative
        max-width 340px
        margin 6px 0 0 0
        font-family "ArnoPro"
        font-size 42px
        line-height 46px
        font-weight 300
        color black
        @media phone
            font-size 28px
            line-height 32px

    &__description
        position relative
        max-width 340px
        margin 14px 0 0 0
        @media phone
            display none

        & p:not([class])
            margin 0
            font-family "HelveticaNeue"
            font-size 16px
            line-height 26px
            font-weight 300
            color black

    &__price
        position relative
        margin 37px 0 0 0
        padding 11px 30px 7px 30px
        font-family "ArnoPro"
        font-size 24px
        line-height 30px
        font-weight 300
        color black
        border 1px solid rgba(45, 39, 39, .25)
        border-radius 25px
        @media phone
            margin 17px 0 0 0

    &__duration
        display inline-block
        margin 0 0 0 10px

        &::before
            content "/"
            display inline-block
            margin 0 10px 0 0

.service-preview--with-image
    & .service-preview__image
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%) scale(1)
        display block
        width 101%
        height 101%
        object-fit cover
        opacity .75
        transition transform 1.5s 0s ease

    & .service-preview__info
        align-items flex-start
        justify-content flex-end
        text-align left
        background none
        border none
        overflow hidden

        &::before
            content ""
            position absolute
            bottom 0
            left 0
            display block
            width 100%
            height 50%
            background linear-gradient(to top, black, rgba(45, 39, 39, 0))

    & .service-preview__heading
        color white

    & .service-preview__link
        color white
        border-bottom 1px solid rgba(255, 255, 255, .25)

    & .service-preview__description p:not([class])
        color white

    & .service-preview__price
        color white
        border 1px solid rgba(255, 255, 255, .25)

    &:hover .service-preview__image
        transform translate(-50%, -50%) scale(1.1)

.services-slider
    width 100%
    max-width 640px
    margin 0
    overflow visible
    @media laptop
        max-width 522px

    &__list
        display flex
        flex-wrap nowrap
        height auto
        margin 0
        padding 0
        list-style none

    &__item
        flex-shrink 0
        width 100%

    &__arrows
        display flex
        justify-content space-between
        width 260px  
        margin 46px 0 0 0    



        