.advantages-slider
    position relative
    overflow hidden

    &__list
        display flex
        flex-wrap nowrap
        height auto
        margin 0
        padding 0
        list-style none

    &__item
        flex-shrink 0
        width 100%

    &__arrows
        position absolute
        z-index 1
        right 0
        bottom 40px
        display flex
        justify-content space-between
        width 260px
        @media tablet-portrait-large
            left 50%
            transform translateX(-50%)
        
.advantage-slide
    position relative
    min-height 100vh
    padding 193px 140px 80px 140px
    background-color black
    overflow hidden
    @media desktop-medium
        padding 140px 80px 80px 80px
    @media tablet-landscape-large
        min-height 700px
    @media tablet-landscape-medium
        padding 80px 40px
    @media tablet-portrait-large
        padding 80px 30px
    @media tablet-portrait-small
        min-height 500px
    @media phone
        padding 80px 15px 100px 15px

    &__image
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        display block
        width 100%
        height 100%
        object-fit cover
        opacity .5

    &__info
        position relative
        width 100%
        max-width 35%
        @media tablet-portrait-large
            max-width 500px
            margin 0 auto
            text-align center

    &__description
        margin 28px 0 0 0