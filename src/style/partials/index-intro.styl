.index-intro
    position relative
    display flex
    min-height 100vh
    padding 0 0 0 150px
    overflow hidden
    background-color black
    @media laptop
        padding 0 0 0 140px
    @media tablet-landscape-medium
        padding 0
        min-height auto
    @media tablet-portrait-small
        padding 0 0 80px 0

    &__video
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        display block
        width 100%
        height 100%
        object-fit cover
        opacity .4

    &__info
        position relative
        display flex
        flex-direction column
        align-items center
        height 100%
        padding 10% 0 0 0
        text-align center
        @media tablet-landscape-medium
            padding 80px 0 0 0

    &__heading
        width 100%
        max-width 660px
        @media laptop
            max-width 500px

    &__description
        width 100%
        max-width 520px
        margin 28px 0 0 0
    
    &__links
        display flex
        margin auto 0 0 0
        padding 80px 0 0 0

    &__events-link
        @media tablet-portrait-small
            display none