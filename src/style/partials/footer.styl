.foot
    position relative
    width calc(100% - 150px)
    margin 0 0 0 auto
    padding 34px 0
    background-color lightest-gray
    @media laptop
        width calc(100% - 140px)
    @media tablet-landscape-medium
        width 100%
        margin 0

    &__site-copyright
        display inline-block
        width calc((100% - 38px * 4) / 5)
        margin 0 38px 0 0
        font-family "HelveticaNeue"
        font-size 16px
        line-height 26px
        font-weight 300
        color black
        vertical-align top
        @media laptop
            font-size 14px
            line-height 24px
        @media tablet-portrait-large
            display block
            width 100%
            margin 0
            text-align center

    &__contacts
        display inline-block
        @media tablet-portrait-large
            display block
            text-align center

    &__address
        display block
        font-family "HelveticaNeue"
        font-size 16px
        line-height 26px
        font-weight 300
        color black
        @media laptop
            font-size 14px
            line-height 24px

    &__phone
        font-family "HelveticaNeue"
        font-size 16px
        line-height 26px
        font-weight 300
        color black
        text-decoration none
        outline none
        @media laptop
            font-size 14px
            line-height 24px