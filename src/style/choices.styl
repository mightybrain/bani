.choices
    position relative
    outline none

    &.is-open
        overflow initial

    & [hidden]
        display none !important

    &[data-type*="multiple"]::after,
    &[data-type*="select-one"]::after
        content ""
        position absolute
        right 21px
        top 24px
        height 7px
        width 13px
        background-image url("../images/select-arrow.svg")
        background-repeat no-repeat

    &[data-type*="multiple"].is-open:after,
    &[data-type*="select-one"].is-open:after
        transform rotate(180deg)

    &__inner
        display inline-block
        box-sizing border-box
        width 100%
        min-height 55px
        padding 15px 20px
        font-family "EBGaramond"
        font-size 19px
        line-height 23px
        font-weight 300
        color white
        background-color transparent
        border 1px solid rgba(123 106 106 .5)
        overflow hidden
        cursor pointer
        @media (max-width: 1480px)
            min-height 52px
            font-size 16px
            line-height 20px

    &__list
        position relative

        &--dropdown
            visibility hidden
            z-index 2
            position absolute
            box-sizing border-box
            width 100%
            max-height 300px
            background-color #ffffff
            top calc(100% - 5px)
            padding 40px
            overflow-y auto
            word-break break-all
            will-change visibility

            &::-webkit-scrollbar
                width 7px
                background-color #e5e5e5

            &::-webkit-scrollbar-thumb
                background-color #e38027

            &.is-active
                visibility visible

            & .choices__item
                position relative
                font-family "EBGaramond"
                font-size 19px
                line-height 23px
                font-weight 300
                color #2d2727
                @media (max-width: 1480px)
                    font-size 16px
                    line-height 20px

            & .choices__item + .choices__item
                margin 12px 0 0 0

            & .choices__list
                -webkit-overflow-scrolling touch
                will-change scroll-position

            & .choices__item--selectable.is-highlighted
                color #df7211

.is-disabled
    & .choices__inner
        border 1px solid rgba(123 106 106 .1)
        cursor default

    &[data-type*="select-one"]::after
        opacity .25

    & .choices__item
        color #7b6a6a

.js-valid-error
    & .choices__inner
        border 1px solid rgba(227 128 39 1)

.is-flipped .choices__list--dropdown
    top auto
    bottom 100%

.choices__item
    display inline-block

.choices__list--multiple
    width calc(100% - 32px)
    margin 0 0 0 -20px

    & .choices__item:not(.choices__item--choice)
        margin 0 0 0 20px

.choices__item--choice
    display block

.choices__item--selectable
    cursor pointer

.choices__button
    display none
    text-indent -9999px
    -webkit-appearance none
    -moz-appearance none
    appearance none
    border 0
    background-color transparent
    background-repeat no-repeat
    background-position center
    cursor pointer

.choices:not(.choices--filter)[data-type*="select-one"]
    & .choices__item:first-child + .choices__item
        margin 0

    & .choices__item:not(:first-child) + .choices__item
        margin 12px 0 0 0

.choices[data-type*="select-multiple"]
    & .choices__button
        position relative
        right -5px
        top 5px
        transform rotate(0deg)
        padding 0
        display inline-block
        width 13px
        height 13px
        opacity 0.75
        border-radius 0
        transition transform .5s 0s ease
        @media (max-width: 1480px)
            top 3px

        &:hover
            transform rotate(90deg)

        &::before
            content ""
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%) rotate(45deg)
            display block
            width 100%
            height 1px
            background-color white
            transition background-color .3s 0s ease

        &::after
            content ""
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%) rotate(-45deg)
            display block
            width 100%
            height 1px
            background-color white
            transition background-color .3s 0s ease

.choices__input
    position absolute
    display none
    opacity 0
    visibility hidden

.choices--filter
    display inline-block
    width 100%
    margin 0
    padding 0
    text-align center

    & .choices__item
        margin 0
        font-family "EBGaramond"
        font-size 19px
        line-height 23px
        font-weight 300
        color black
        @media (max-width: 1480px)
            font-size 16px
            line-height 20px

    & .choices__item + .choices__item
        margin 14px 0 0 0
        @media (max-width: 1480px)
            margin 10px 0 0 0

    & .choices__inner
        position relative
        width auto
        height auto
        min-height 0
        padding 0 10px
        border none
        overflow visible

        &::before
            content ""
            position absolute
            top 13px
            right 100%
            display block
            width 50px
            height 1px
            background-color black
            opacity .1
            transition width .5s 0s ease
            @media (max-width: 1480px)
                top 11px

        &::after
            content ""
            position absolute
            top 13px
            left 100%
            display block
            width 50px
            height 1px
            background-color black
            opacity .1
            transition width .5s 0s ease
            @media (max-width: 1480px)
                top 11px

    & .choices--filter
        & .choices__button
            display none

    & .choices__list--dropdown
        left 50%
        top 41px
        transform translateX(-50%)
        width auto
        padding 50px
        @media (max-width: 600px)
            width 100%
            max-width 280px

        & .choices__item
            padding 0

    & .choices__button
        display none

.choices--filter:hover
    & .choices__inner::before
        width 25px

    & .choices__inner::after
        width 25px

.choices--filter[data-type*="select-one"]
    & .choices__inner
        padding 0 10px
